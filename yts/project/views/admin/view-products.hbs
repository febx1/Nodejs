<section>
    <dev class="container">
        <div class="row mt-4 mr-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row"></th>
                    <td>{{this.name}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px;height:50px" src="{{this.image}}" alt=''></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </dev>
</section>